<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login_Form.Views.AccountTabbedPage">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Label Text="Welcome to Account Tabbed Page!"
                   FontSize=" 35"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Grid>
                <StackLayout x:Name="ledcontent">
                    <Button TabIndex="0"
                            Text="LED 1">
                    </Button>
                    <Button TabIndex="1"
                            Text="LED 2">
                    </Button>
                    <Button TabIndex="2"
                            Text="LED 3">
                    </Button>
                    <Button TabIndex="3"
                            Text="LED 4">
                    </Button>
                </StackLayout>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>